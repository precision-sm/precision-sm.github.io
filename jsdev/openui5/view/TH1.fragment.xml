<core:FragmentDefinition
       xmlns="sap.m"
       xmlns:l="sap.ui.layout"
       xmlns:core="sap.ui.core">
   <VBox>
      <RadioButtonGroup selectedIndex="{/th1/mode3d}" columns="2"
         width="100%">
         <buttons>
            <RadioButton text="2-D" />
            <RadioButton text="3-D" />
         </buttons>
      </RadioButtonGroup>
      <Panel visible="{= ${/th1/mode3d} === 0  &amp;&amp; ${/th1/ndim} === 1}">
         <Label text="Error:" class="sapUiSmallMarginEnd" labelFor="ErrorsSelectTh1" />
         <Select selectedKey="{/th1/Errors}" tooltip="Contor" id="ErrorsSelectTh1">
            <items>
               <core:Item text="No" key="0" />
               <core:Item text="Simple" key="1" />
               <core:Item text="Edges" key="2" />
               <core:Item text="Rect" key="3" />
               <core:Item text="Fill" key="4" />
               <core:Item text="Cont" key="5" />
            </items>
         </Select>
         <Label text="Style:" class="sapUiSmallMarginEnd" labelFor="StyleSelectTh1" />
         <Select selectedKey="{/th1/Style}" tooltip="Contor" id="StyleSelectTh1">
            <items>
               <core:Item text="No" key="0" />
               <core:Item text="Simple" key="1" />
               <core:Item text="Strooth" key="2" />
               <core:Item text="Fill" key="3" />
            </items>
         </Select>

         <CheckBox text="Simple drawing" selected="true" enabled="false" />
         <CheckBox text="Show markers" selected="false" />
         <CheckBox text="Draw bar chart" selected="false" />
         <CheckBox text="Bar option" selected="false" enabled="false"/>
      </Panel>
      
      <Panel visible="{= ${/th1/mode3d} === 1 &amp;&amp; ${/th1/ndim} === 1}">
         <Label text="Type" labelFor="LegoSelectTh1" />
         <Select selectedKey="{/th1/Lego}" tooltip="Contor" id="LegoSelectTh1">
            <items>
               <core:Item text="Lego" key="0" />
               <core:Item text="Lego1" key="1" />
               <core:Item text="Lego2" key="2" />
            </items>
         </Select>
      </Panel>
      
      <Panel visible="{= ${/th1/mode3d} === 0 &amp;&amp; ${/th1/ndim} === 2}">
         <Label text="Contor" labelFor="ContorSelectTh2" />
         <Select selectedKey="{/th1/Contor}" tooltip="Contor" id="ContorSelectTh2">
            <items>
               <core:Item text="none" key="-1" />
               <core:Item text="Cont0" key="0" />
               <core:Item text="Cont1" key="1" />
               <core:Item text="Cont2" key="2" />
               <core:Item text="Cont3" key="3" />
               <core:Item text="Cont4" key="4" />
            </items>
         </Select>

         <CheckBox text="Arrow" selected="true" />
         <CheckBox text="Box" selected="false" />
         <CheckBox text="Col" selected="false" />
         <CheckBox text="Scat" selected="false" />
         <CheckBox text="Text" selected="false" />
         <CheckBox text="Palette" selected="false" />
      </Panel>
      
      <Panel visible="{= ${/th1/mode3d} === 1 &amp;&amp; ${/th1/ndim} === 2}">
         <Label text="Type" labelFor="LegoSelectTh2" />
         <Select selectedKey="{/th1/Lego}" tooltip="Contor" id="LegoSelectTh2">
            <items>
               <core:Item text="Lego" key="0" />
               <core:Item text="Lego0" key="1" />
               <core:Item text="Lego1" key="2" />
               <core:Item text="Lego2" key="3" />
               <core:Item text="Lego3" key="4" />
               <core:Item text="Lego4" key="5" />
            </items>
         </Select>

         <CheckBox text="Front" selected="true" />
         <CheckBox text="Back" selected="true" />
         <CheckBox text="Errors" selected="false" />
         <CheckBox text="Palette" selected="false" />
      </Panel>
   </VBox>
</core:FragmentDefinition>
